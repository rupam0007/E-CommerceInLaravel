@import 'tailwindcss';

@source '../../vendor/laravel/framework/src/Illuminate/Pagination/resources/views/*.blade.php';
@source '../../storage/framework/views/*.php';
@source '../**/*.blade.php';
@source '../**/*.js';

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

@theme {
    --font-sans: 'Inter', ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
        'Segoe UI Symbol', 'Noto Color Emoji';
}

/* Clean Professional Purple Theme */
:root {
    --color-bg: 250 250 252; /* Very light purple-gray */
    --color-text: 30 27 75; /* Deep purple-navy */
    --color-surface: 255 255 255; /* Pure white */
    --color-border: 229 225 244; /* Light purple-gray */
    --color-accent: 124 58 237; /* Purple-600 */
    --color-accent-hover: 109 40 217; /* Purple-700 */
    --color-accent-light: 196 181 253; /* Purple-300 */
    --color-muted: 100 116 139; /* Slate-500 */
    --color-success: 34 197 94; /* Green-500 */
    --color-warning: 251 191 36; /* Amber-400 */
    --color-error: 239 68 68; /* Red-500 */
}

.dark {
    --color-bg: 17 17 26; /* Deep purple-black */
    --color-text: 248 247 254; /* Very light purple-white */
    --color-surface: 30 27 75; /* Deep purple */
    --color-border: 55 48 112; /* Medium purple */
    --color-accent: 167 139 250; /* Purple-400 */
    --color-accent-hover: 196 181 253; /* Purple-300 */
    --color-accent-light: 88 80 141; /* Darker purple */
    --color-muted: 148 163 184; /* Slate-400 */
    --color-success: 74 222 128; /* Green-400 */
    --color-warning: 252 211 77; /* Amber-300 */
    --color-error: 248 113 113; /* Red-400 */
}

body {
    background-color: rgb(var(--color-bg));
    color: rgb(var(--color-text));
    font-family: var(--font-sans);
    letter-spacing: -0.01em;
}

/* Clean UI Components */
.surface {
    background-color: rgb(var(--color-surface));
    border: 1px solid rgb(var(--color-border));
}

.theme-bg {
    background-color: rgb(var(--color-bg));
    color: rgb(var(--color-text));
    transition: background-color 0.2s ease, color 0.2s ease;
}

.theme-surface {
    background-color: rgb(var(--color-surface));
    color: rgb(var(--color-text));
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
}

.theme-border {
    border-color: rgb(var(--color-border));
    transition: border-color 0.2s ease;
}

.theme-text-muted {
    color: rgb(var(--color-muted));
    transition: color 0.2s ease;
}

.hover-theme-accent:hover {
    color: rgb(var(--color-accent));
}

.theme-accent {
    color: rgb(var(--color-accent));
}

/* Button Styles */
.btn-primary {
    background-color: rgb(var(--color-accent));
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    transition: all 0.2s ease;
    border: none;
}

.btn-primary:hover {
    background-color: rgb(var(--color-accent-hover));
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgb(var(--color-accent) / 0.3);
}

.btn-secondary {
    background-color: transparent;
    color: rgb(var(--color-accent));
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    border: 2px solid rgb(var(--color-accent));
    transition: all 0.2s ease;
}

.btn-secondary:hover {
    background-color: rgb(var(--color-accent));
    color: white;
}

.theme-icon-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem;
    border-radius: 0.75rem;
    color: rgb(var(--color-muted));
    transition: all 0.2s ease;
    border: 1px solid transparent;
}

.theme-icon-button:hover {
    color: rgb(var(--color-accent));
    background-color: rgb(var(--color-accent) / 0.1);
    border-color: rgb(var(--color-accent) / 0.2);
}

.theme-card {
    background-color: rgb(var(--color-surface));
    border: 1px solid rgb(var(--color-border));
    border-radius: 1rem;
    transition: all 0.2s ease;
}

.theme-card:hover {
    border-color: rgb(var(--color-accent) / 0.3);
    box-shadow: 0 4px 16px rgb(var(--color-accent) / 0.08);
}

.hover-theme-surface:hover {
    background-color: rgb(var(--color-border) / 0.3);
}

/* Input Styles */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="number"],
textarea,
select {
    background-color: rgb(var(--color-surface));
    border: 2px solid rgb(var(--color-border));
    color: rgb(var(--color-text));
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
    font-family: var(--font-sans);
}

input:focus,
textarea:focus,
select:focus {
    outline: none;
    border-color: rgb(var(--color-accent));
    box-shadow: 0 0 0 3px rgb(var(--color-accent) / 0.1);
}


/* Theme Variable Mappings */
.text-white {
    color: rgb(var(--color-text)) !important;
}

.bg-gray-50,
.bg-gray-100 {
    background-color: rgb(var(--color-bg)) !important;
}

.bg-gray-900,
.bg-gray-800,
.bg-gray-700,
.bg-gray-600 {
    background-color: rgb(var(--color-surface)) !important;
}

.bg-white {
    background-color: rgb(var(--color-surface)) !important;
}

.text-gray-300,
.text-gray-200,
.text-gray-100 {
    color: rgb(var(--color-text)) !important;
}

.text-gray-900,
.text-gray-800,
.text-gray-700,
.text-gray-600 {
    color: rgb(var(--color-text)) !important;
}

.text-gray-500,
.text-gray-400 {
    color: rgb(var(--color-muted)) !important;
}
.text-gray-500,
.text-gray-600 {
    color: rgb(var(--color-muted)) !important;
}

.border-gray-900,
.bg-white {
    background-color: rgb(var(--color-surface)) !important;
}

.bg-gray-100,
.bg-gray-200,
.bg-gray-300 {
    background-color: rgb(var(--color-border) / 0.35) !important;
}
.border-gray-800,
.border-gray-700,
.border-gray-600,
.border-gray-500,
.border-gray-400 {
    border-color: rgb(var(--color-border)) !important;
}

.hover\:bg-gray-700:hover,
.hover\:bg-gray-800:hover,
.hover\:bg-gray-900:hover {
    background-color: rgb(var(--color-border) / 0.25) !important;
}

/* Ensure accent backgrounds retain readable text */
.bg-indigo-500,
.bg-indigo-600,
.bg-indigo-700,
.bg-indigo-900 {
    color: #ffffff !important;
}

.text-indigo-400,
.text-indigo-500 {
    color: rgb(var(--color-accent)) !important;
}

.bg-blue-600,
.bg-blue-700 {
    color: #ffffff !important;
    background-color: rgb(var(--color-accent)) !important;
}

.hover\:bg-blue-700:hover {
    background-color: rgb(var(--color-accent) / 0.85) !important;
}

.text-blue-600,
.text-blue-700 {
    color: rgb(var(--color-accent)) !important;
}

.hover\:text-blue-600:hover,
.hover\:text-blue-700:hover {
    color: rgb(var(--color-accent)) !important;
}

.btn-theme-toggle {
    cursor: pointer;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    background: rgb(var(--color-accent) / 0.15);
    color: rgb(var(--color-text));
    border: 1px solid rgb(var(--color-border));
    transition: background-color .15s ease, color .15s ease;
}
.btn-theme-toggle:hover {
    background: rgb(var(--color-accent) / 0.30);
}
